  <script type="text/javascript">
    var chart;
    var name = '<b><%=@user.username%></b>';
    function renderMoods(){
      var moods_arr = [];
      $.get('<%= user_moods_path(@user)+"/limit/10.json" %>',function(data){
        var i = 0;
        if(data.length == 0){
          alert("Hello No Data");
        }
        $.each(data, function(key, value) {
          var ts = new Date(value.mood.report_time);
          var mood = {"id":i,"val":value.mood.mood,"desc":value.mood.desc,"time":month[ts.getMonth()]+" "+ts.getDate(),"date":value.mood.report_time};
          if(i==0){
            //latest mood
            var moodStr = '<b>'+getMoodStr(mood.val)+'</b>';
            var status = name +' is '+moodStr+' : '+mood.desc;
            $("#usr-status").html(status);
          }
          moods_arr.push(mood);
          i++;
        });
        drawChart(moods_arr.reverse());
      });
    }

    $(document).ready(function() {

      prepareMoodIcons();
      renderMoods();
      // Setup the ajax indicator
      $('.actions').append('<div id="ajax-busy" class="fl"><img src="/images/ajax-loader.gif"></div>');
      // Ajax activity indicator bound to ajax start/stop document events
      $(document).ajaxStart(function(){
        $('#ajax-busy').show();
      }).ajaxStop(function(){
        $('#ajax-busy').hide();
      });
    });
  </script>
<% end %>
