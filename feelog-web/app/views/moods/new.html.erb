        function renderMoods(){
          var moods_arr = [];
          $.get('<%= user_moods_path(@user)+"/limit/10.json" %>',function(data){
            var i = 0;
            if(data.length == 0){
                 //google.setOnLoadCallback(drawChart(moods_arr));
            }
            $.each(data, function(key, value) {
                if(i < 10){
                  var ts = new Date(value.mood.report_time);
                  var mood = {"id":i,"val":value.mood.mood,"desc":value.mood.desc,"time":month[ts.getMonth()]+" "+ts.getDate(),"date":value.mood.report_time};
                  moods_arr.push(mood);
                  i++;
                }else{
                  return false;
                }
            });
            drawChart(moods_arr.reverse());
          });
        }

